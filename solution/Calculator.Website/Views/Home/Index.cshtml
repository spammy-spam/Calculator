@model Calculo.Calculator.Website.Models.Calculation

@{
    ViewBag.Title = "test title 1";
    Layout = "/Views/Shared/Layout.cshtml";
}



<h2>Rekenmachine</h2>

<h3>Welkom</h3>

<p>Voer een som in!</p>

@if (Model != null)
{
    <h3>@Model.Sum</h3>
    <h4>@Model.Answer</h4>
}

@{
    using (Html.BeginForm("index", "Home", FormMethod.Post))
    {
        <input type="text" value="@Html.Raw(Model?.Sum)" name="sum" />
        <input type="submit" name="submit" value="Submit" />
    }
}
